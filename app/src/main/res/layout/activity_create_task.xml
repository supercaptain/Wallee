<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adam.wallee.Activities.CreateTaskActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_Title"
        android:layout_below="@+id/app_bar"
        android:paddingLeft="17dp"
       />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText_Content"
        android:layout_below="@+id/editText_Title"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Task"
        android:id="@+id/button_Createtask"
        android:layout_below="@+id/editText_Content"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewResult"
        android:layout_below="@+id/button_Createtask"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp" />


</RelativeLayout>
